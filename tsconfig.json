{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2020",
    "rootDir": "src",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "types",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
